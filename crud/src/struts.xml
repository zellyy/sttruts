<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
<constant name="struts.devModel" value="true"></constant>
<constant name="struts.ognl.allowStaticMethodAccess" value="true"></constant>
<package name="Struts2_01" namespace="/" extends="struts-default">
<!-- 在package中，定义标签要有先后顺序result-types
interceptors
default-interceptor-ref
default-action-ref
default-class-ref
global-results
global-exception-mappings
action*(就是所有的action放到最后)
-->
<interceptors>
<interceptor name="myIntercepter" class="com.panda.intercepter.MyInterceter"/>
<interceptor-stack name="allIntercepter">
<interceptor-ref name="myIntercepter"></interceptor-ref>
<interceptor-ref name="defaultStack"></interceptor-ref>
</interceptor-stack>
</interceptors>
<global-results>
<result name="error">/error.jsp</result>
</global-results>
<action name="login1" class="com.panda.action.LgoinAction" method="login1">
<result name="input">/login1.jsp</result>
<result name="success">success.jsp</result>
</action>
<action name="show" class="com.panda.action.ShowResultAction">
<interceptor-ref name="allIntercepter"/>
<result name="success">success.jsp</result>
<result name="login1">/login1.jsp</result>
</action>


<!-- <package name="Struts2_01" namespace="/" extends="struts-default">-->

   <action name="Login" class="com.Action.LoginAction">
			<result name="success">/success.jsp</result>
			<result name="fail">/index.jsp</result>
		</action>
 <action name="userlogin" class="com.structs.action.UserLoginAction" method="userlogin">
         <result name="success">/jq.jsp</result>
            <result name="User_password_error">/passwordError.jsp</result>
   			<result name="User_id_error">/idError.jsp</result>
        </action>
        
         <action name="adminlogin" class="com.structs.action.AdminLoginAction" method="adminlogin">
            <result name="success">/displayall.jsp</result>
            <result name="Admin_password_error">/passwordError.jsp</result>
   			<result name="Admin_id_error">/idError.jsp</result>
        </action>
        
         <action name="register" class="com.structs.action.RegisterAction" method="executeRe">
            <result name="success">/RegisterSuccess.jsp</result>
            <result name="null_error">/nullerror.jsp</result>
            <result name="register_fail">/RegisterFail.jsp</result>            
        </action>
		<action name="Display" class="com.Action.DisplayAction">
			<result name="success">/displayall.jsp</result>
		</action>

		<action name="Select" class="com.Action.SelectByNameAction">
			<result name="success">/displaybyname.jsp</result>
		</action>

		<action name="Add" class="com.Action.AddAction">
			<result name="success">/success.jsp</result>
		</action>

		<action name="Delete" class="com.Action.DeleteAction">
			<result name="success">/success.jsp</result>
		</action>

		<action name="Update" class="com.Action.UpdateAction">
			<result name="success">/success.jsp</result>
		</action>
</package>
</struts>